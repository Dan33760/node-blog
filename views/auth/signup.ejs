<%- include('../includes/head', { title: "Signup" }) %>

    <!-- Enregistrement -->
    <div class="fixed inset-0 bg-gray-100 flex items-center justify-center z-50" id="registerPage">
        <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-sm">
            <h2 class="text-xl font-bold mb-4 text-center">Créer un compte</h2>
            <form class="space-y-4" action="/auth/signup" method="post">
                <input type="hidden" readonly name="_csrf" value="<%= csrfToken %>">
                <div>
                    <label for="name" class="text-sm font-semibold text-black-500 mt-1">Nom</label>
                    <input type="text" name="name" value="<%= oldUser.name %>"
                        class="border px-3 py-2 rounded w-full text-sm" />
                        <% if(errorsMessage.find(e => e.path === 'name')) { %>
                            <p class="text-xs text-red-500 mt-1"><%= errorsMessage.find(e => e.path === 'name').msg %></p>
                        <% } %>
                </div>
                <div>
                    <label for="emaol" class="text-sm font-semibold text-black-500 mt-1">Email</label>
                    <input type="email" name="email" value="<%= oldUser.email %>"
                        class="border px-3 py-2 rounded w-full text-sm" />
                        <% if(errorsMessage.find(e => e.path === 'email')) { %>
                            <p class="text-xs text-red-500 mt-1"><%= errorsMessage.find(e => e.path === 'email').msg %></p>
                        <% } %>
                </div>
                <div>
                    <label for="password" class="text-sm font-semibold text-black-500 mt-1">Mot de passe</label>
                    <input type="password" name="password" value="<%= oldUser.password %>"
                        class="border px-3 py-2 rounded w-full text-sm" />
                        <% if(errorsMessage.find(e => e.path === 'password')) { %>
                            <p class="text-xs text-red-500 mt-1"><%= errorsMessage.find(e => e.path === 'password').msg %></p>
                        <% } %>
                </div>
                <button type="submit"
                    class="bg-green-600 text-white px-4 py-2 rounded w-full text-sm hover:bg-green-700">S'inscrire</button>
            </form>
            <p class="text-sm text-center mt-4">Déjà un compte ? <a href="/auth/login" onclick="switchToLogin()"
                    class="text-blue-600 hover:underline">Se connecter</a></p>
        </div>
    </div>

<%- include('../includes/end') %>