<%- include('../includes/head', { title: "Liste des articles" }) %>

    <!-- Sidebar -->
    <%- include('../includes/sidebar', { path: path }) %>
    
    <div class="flex-1 flex flex-col relative">
        <!-- Notification -->
        <% if(message.length > 0) { %>
            <div id="alert" class="absolute top-2.5 right-5 rounded-xl px-[20px] py-[10px] bg-green-400">
                <%= message[0] %>
            </div>
        <% } %>
            <!-- Header -->
            <%- include('../includes/header') %>

            <main class="flex-1 p-6 space-y-10">

                <!-- Tableau des articles -->
                <section class="bg-white p-6 rounded-2xl shadow">
                    <div class="flex justify-between">
                        <h2 class="text-lg font-semibold mb-4">Liste des Articles</h2>
                        <div>
                            <a href="/articles/add"
                                class="bg-blue-500 text-white px-2 py-1 text-xs rounded">Ajouter</a>
                        </div>
                    </div>
                    <table class="min-w-full table-auto text-sm">
                        <thead>
                            <tr class="bg-gray-200 text-left">
                                <th class="p-2"><input type="checkbox"></th>
                                <th class="p-2">Titre</th>
                                <th class="p-2">Description</th>
                                <th class="p-2">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% 
                            if(articles.length) {
                                for(let article of articles) {
                            %>
                                <tr class="border-b hover:bg-gray-50">
                                    <td class="p-2"><input class="item" type="checkbox"></td>
                                    <td class="p-2"><%= article.title %></td>
                                    <td class="p-2"><%= article.slug %></td>
                                    <td class="p-2 space-x-1">
                                        <a href="/admin/articles/edit/<%= article.id %>"
                                            class="bg-yellow-500 text-white px-2 py-1 text-xs rounded">Modifier</button>
                                        <a href="/admin/articles/delete/<%= article.id %>"
                                            class="bg-red-600 text-white px-2 py-1 text-xs rounded">Supprimer</a>
                                        <!-- <a href="#" onclick="document.getElementById('detailModal').classList.remove('hidden')"
                                            class="bg-red-600 text-white px-2 py-1 text-xs rounded">Supprimer</a> -->
                                    </td>
                                </tr>
                            <%
                                }
                            } else { 
                            %>
                                <tr><td>Pas d'article Trouves</td></tr>
                            <% } %>
                        </tbody>
                    </table>
                </section>
            </main>
        </div>
    </div>

