<%- include('../includes/head', { title: "Signup" }) %>

    <!-- Enregistrement -->
    <div class="fixed inset-0 bg-gray-100 flex items-center justify-center z-50" id="registerPage">
        <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-sm">
            <h2 class="text-xl font-bold mb-4 text-center">Créer un compte</h2>
            <form class="space-y-4">
                <div>
                    <input type="text" placeholder="Nom complet" class="border px-3 py-2 rounded w-full text-sm" />
                    <p class="text-xs text-red-500 mt-1">Nom requis</p>
                </div>
                <div>
                    <input type="email" placeholder="Adresse e-mail" class="border px-3 py-2 rounded w-full text-sm" />
                    <p class="text-xs text-red-500 mt-1">Email invalide</p>
                </div>
                <div>
                    <input type="password" placeholder="Mot de passe" class="border px-3 py-2 rounded w-full text-sm" />
                    <p class="text-xs text-red-500 mt-1">Minimum 6 caractères</p>
                </div>
                <button type="submit"
                    class="bg-green-600 text-white px-4 py-2 rounded w-full text-sm hover:bg-green-700">S'inscrire</button>
            </form>
            <p class="text-sm text-center mt-4">Déjà un compte ? <a href="/auth/login" onclick="switchToLogin()"
                    class="text-blue-600 hover:underline">Se connecter</a></p>
        </div>
    </div>

<%- include('../includes/end') %>